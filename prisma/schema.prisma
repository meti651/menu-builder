// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid()) @map("_id") @db.ObjectId
  email        String   @unique
  name         String?
  passwordHash String
  recipes      Recipe[]
  menus        Menu[]
}

model Recipe {
  id            String       @id @default(uuid()) @map("_id") @db.ObjectId
  user          User         @relation(fields: [userId], references: [id])
  userId        String       @db.ObjectId
  name          String?
  ingredientIds String[]     @db.ObjectId
  ingredients   Ingredient[] @relation(fields: [ingredientIds], references: [id])
  description   String
  menuRecipeIds String[]     @db.ObjectId
  menuRecipes   MenuRecipe[]
  createdAt     DateTime     @default(now())
  updatetedAt   DateTime     @updatedAt
}

model Ingredient {
  id        String   @id @default(uuid()) @map("_id") @db.ObjectId
  name      String   @unique
  calories  String
  unit      String
  recipeIds String[] @db.ObjectId
  recipes   Recipe[] @relation(fields: [recipeIds], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id            String       @id @default(uuid()) @map("_id") @db.ObjectId
  name          String
  user          User         @relation(fields: [userId], references: [id])
  userId        String       @db.ObjectId
  menuRecipeIds String[]     @db.ObjectId
  menuRecipes   MenuRecipe[]
}

model MenuRecipe {
  id       String @id @default(uuid()) @map("_id") @db.ObjectId
  day      String
  recipeId String @db.ObjectId
  recipe   Recipe @relation(fields: [recipeId], references: [id])
  menuId   String @db.ObjectId
  menu     Menu   @relation(fields: [menuId], references: [id])
}
